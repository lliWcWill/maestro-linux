{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "files": {
    "_comment_experimentalScannerIgnores": "TODO: experimentalScannerIgnores may change or be renamed in future Biome releases â€” track upstream.",
    "experimentalScannerIgnores": [
      "**/node_modules/**",
      "**/dist/**",
      "src-tauri/target/**",
      "src-tauri/gen/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": {
          "level": "error",
          "options": {
            "ignoreAtRules": ["tailwind", "apply", "layer"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  }
}
